{
  "name": "@hquant/core",
  "version": "0.1.0",
  "description": "High-performance quantitative trading indicators (Rust core)",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "hquant-core",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "test": "node test.js"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.16.0"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "license": "MIT"
}
